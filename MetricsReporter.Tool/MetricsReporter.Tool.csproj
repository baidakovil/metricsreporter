<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>metricsreporter</ToolCommandName>
    <AssemblyName>MetricsReporter.Tool</AssemblyName>
    <RootNamespace>MetricsReporter.Tool</RootNamespace>
    <PackageId>MetricsReporter.Tool</PackageId>
    <Description>CLI tool wrapper for the MetricsReporter library.</Description>
    <PackageTags>metrics;coverage;sarif;roslyn;dotnet;tool</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\MetricsReporter\MetricsReporter.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
  </ItemGroup>
</Project>
