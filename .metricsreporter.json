{
  "general": {
    "verbosity": "normal",
    "timeoutSeconds": 900,
    "logTruncationLimit": 4000
  },
  "paths": {
    "metricsDir": "Metrics",
    "report": "Metrics/MetricsReport.g.json",
    "readReport": "Metrics/MetricsReport.g.json",
    "baseline": "Metrics/MetricsTemp/MetricsBaseline.g.json",
    "suppressedSymbols": "Metrics/MetricsTemp/SuppressedSymbols.g.json",
    "thresholds": "Metrics/MetricsRules/MetricsReporterThresholds.json",
    "solutionDirectory": ".",
    "sourceCodeFolders": [
      "MetricsReporter",
      "MetricsReporter.Tests",
      "MetricsReporter.Tool"
    ],
    "outputHtml": "Metrics/MetricsReport.html",
    "roslyn": [
      "Metrics/Roslyn/SolutionMetrics.g.xml"
    ],
    "sarif": [
      "Metrics/Sarif/MetricsReporter.sarif",
      "Metrics/Sarif/MetricsReporter.Tool.sarif",
      "Metrics/Sarif/MetricsReporter.Tests.sarif"
    ],
    "excludedAssemblies": "Tests",
    "solutionName": "metricsreporter",
    "analyzeSuppressedSymbols": true,
    "replaceBaseline": true
  },
  "scripts": {
    "generate": [
      "Metrics/scripts/prepare-metrics.ps1"
    ],
    "read": {
      "any": [
        "Metrics/scripts/prepare-metrics.ps1"
      ]
    }
  }
}

